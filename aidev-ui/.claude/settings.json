{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|compact",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/session-resume.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/workflow-nudge.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/branch-protection.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-commit-checks.sh",
            "timeout": 10000
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/phase-gate.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/tdd-guard.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/test-mod-detector.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/review-gate.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/process-guard.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/stop-decompose-verify.sh",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
